package Text;

import java.util.Random;

public class WritingEffect {
	Random rand = new Random();
	private int vel=25;
	private int range=50;
	
	public void write(String phrase) {
		
		if(phrase.length()==1) System.out.print(phrase); 
		else if(phrase.length()>1) {
			int read = rand.nextInt(phrase.length()-1)+1;// 1~X
			int counter = 0;
			
			for (char caractere : phrase.toCharArray()) {
				System.out.print(caractere);
				
				if(counter < read) {
					try {
						Thread.sleep(rand.nextInt(range)+(vel));
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
				else if (phrase.length()!=counter){
					read += rand.nextInt(phrase.length()-1)+1;// 1~X
					try {
						Thread.sleep(rand.nextInt(range)+(20*vel));//40*vel
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						
						e.printStackTrace();
					}
				}
				
				counter++;
			}
		}
		else {
			System.out.print("Nenhuma frase encontrada!");
		}
	}
	
	public void wait(int x) {
		try {
			Thread.sleep(x);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
