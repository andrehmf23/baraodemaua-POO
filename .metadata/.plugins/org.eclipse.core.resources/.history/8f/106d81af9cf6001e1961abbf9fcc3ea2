package Text;

import java.util.Random;

public class WritingEffect {
	Random rand = new Random();
	
	public void write(String phrase, int vel) {
		int read = rand.nextInt(phrase.length()-1)+1;// 1~X
		int counter = 0;
		for (char caractere : phrase.toCharArray()) {
			System.out.print(caractere);
			if(counter < read) {
				try {
					Thread.sleep(rand.nextInt(100-1)+(40*vel)+1);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			else if (phrase.length()!=counter+1){
				read += rand.nextInt(phrase.length()-1)+1;// 1~X
				try {
					Thread.sleep(rand.nextInt(100-1)+(40*vel)+1);//40*vel
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					
					e.printStackTrace();
				}
			}
			counter++;
		}
	}
	
	public void wait(int x) {
		try {
			Thread.sleep(x);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
